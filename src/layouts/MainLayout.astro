---
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/dpz4njr.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>K&R Wedding &#183; {title}</title>
    <!-- Primary Meta Tags -->
    <title>Kristina Matuska & Robert Rosenberg Wedding 2023</title>
    <meta
      name="title"
      content="Kristina Matuska & Robert Rosenberg Wedding 2023"
    />
    <meta
      name="description"
      content="Come celebrate Kristina and Robert getting married August 26th, 2023!"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kristinarobert.wedding/" />
    <meta
      property="og:title"
      content="Kristina Matuska & Robert Rosenberg Wedding 2023"
    />
    <meta
      property="og:description"
      content="Come celebrate Kristina and Robert getting married August 26th, 2023!"
    />
    <meta
      property="og:image"
      content="https://kristinarobert.wedding/images/kr_site.png"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://kristinarobert.wedding/" />
    <meta
      property="twitter:title"
      content="Kristina Matuska & Robert Rosenberg Wedding 2023"
    />
    <meta
      property="twitter:description"
      content="Come celebrate Kristina and Robert getting married August 26th, 2023!"
    />
    <meta
      property="twitter:image"
      content="https://kristinarobert.wedding/images/kr_site.png"
    />
  </head>
  <body class="bg-primary">
    <div class="">
      <Nav />
      <div class="scroll-container md:ml-16">
        <slot />
      </div>
    </div>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init();
    </script>
  </body>
  <!-- <footer>Foot</footer> -->
</html>

<style is:global>
  @font-face {
    font-family: "BellissimaScriptPro";
    src: url("/fonts/BellissimaScriptPro.otf") format("otf");
