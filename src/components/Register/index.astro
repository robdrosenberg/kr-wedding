---
import KRLogo from "../../components/KRLogo.astro";
import BgText from "./BgText.astro";
import CenterContent from "./CenterContent/index.astro";
import MobileTopText from "./MobileTopText.astro";
---

<section
  class="section relative grid grid-cols-12 py-32 pl-5 md:py-0 md:pl-0"
  id="rvsp"
>
  <MobileTopText />
  <BgText />
  <CenterContent />
  <img
    class="absolute left-10 top-1/2 hidden lg:block xl:left-20"
    src="/images/register/walking.jpg"
    alt="Kristina and Rob holding hands and walking."
    data-aos="fade-right"
    data-aos-duration="500"
  />

  <img
    class="absolute right-10 top-1/2 hidden lg:block xl:right-20"
    src="/images/register/bottom-right.jpg"
    alt="Kristina and Rob at a party."
    data-aos="fade-left"
    data-aos-duration="500"
  />

  <div
    class="bottom-0 col-span-12 mb-0 ml-0 mr-5 flex items-center sm:right-10 sm:ml-10 sm:mr-10 lg:absolute lg:mb-40 lg:ml-0 lg:mr-0 xl:right-20 xl:mb-20"
  >
    <div class="flex flex-col" data-aos="fade-left" data-aos-duration="500">
      <!-- <p class="">WEBSITE DESIGNED BY KRISTINA</p>
      <p class="sm:ml-20">& DEVELOPED BY ROBERT</p> -->
      <p class="">DESIGNED & DEVELOPED BY KRISTINA, ROBERT</p>
      <p class="sm:ml-20 text-right">& OUR FRIEND SCOTT</p>
    </div>

    <img
      class="ml-auto block lg:hidden"
      src="/images/register/bottom-right-mobile.jpg"
      alt="Kristina and Rob holding hands and walking."
    />
  </div>
</section>
